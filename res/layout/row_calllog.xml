<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  
   android:padding="1dp">
        
        <!--  android:layout_height="?android:attr/listPreferredItemHeight" -->

        <ImageView android:id="@+id/tipo"
                android:layout_width="32dp" 
                android:layout_height="32dp"
                android:minWidth="32dp" android:minHeight="32dp"
                
                android:layout_margin="10dp" />
                

        <TextView android:id="@+id/nome"
        		android:layout_marginTop="5dp"
                android:layout_width="170dp" 
                android:layout_height="wrap_content"
                
                android:textSize="20sp"
                android:layout_toRightOf="@id/tipo" 
                
                android:ellipsize="end" />
        <TextView android:id="@+id/numero"
                android:layout_width="170dp" android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tipo"
                android:layout_below="@id/nome" android:maxLines="2"
                android:ellipsize="end"  />   

        <TextView android:id="@+id/data"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" android:layout_marginRight="3dp"
                android:layout_toRightOf="@id/numero"
                android:gravity="right" android:enabled="false" />
                
</RelativeLayout>
